<UserControl x:Class="oradev.TreeCombo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oradev"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" LostFocus="UserControl_LostFocus">
    <Grid>
        <Button Name="btnMain" Content="Document" Click="btnMain_Click"/>
        <Popup Name="selector" PlacementTarget="{Binding btnMain}" Height="200" Width="400" >
            <TreeView Name="tree" Width="400" SelectedItemChanged="tree_SelectedItemChanged">
                
            </TreeView>
        </Popup>
    </Grid>
</UserControl>
